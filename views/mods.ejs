<%- include('layout', { 
    title: title,
    body: `
    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <h1 class="page-title">${title}</h1>
            <p class="page-subtitle">${subtitle}</p>
        </div>
    </section>

    <!-- Mod Categories -->
    <section class="mod-categories">
        <div class="container">
            <div class="category-tabs">
                <button class="category-btn active" data-category="mining">
                    <i class="fas fa-pickaxe"></i>
                    <span>Mining Mods</span>
                </button>
                <button class="category-btn" data-category="automation">
                    <i class="fas fa-robot"></i>
                    <span>Automation</span>
                </button>
                <button class="category-btn" data-category="tools">
                    <i class="fas fa-tools"></i>
                    <span>Enhanced Tools</span>
                </button>
                <button class="category-btn" data-category="worldgen">
                    <i class="fas fa-globe"></i>
                    <span>World Generation</span>
                </button>
            </div>
        </div>
    </section>

    <!-- Mining Mods Content -->
    <section class="mod-content" id="mining-content">
        <div class="container">
            <div class="mods-grid">
                <div class="mod-card featured">
                    <div class="mod-header">
                        <h3>JEI (Just Enough Items)</h3>
                        <span class="mod-version">v11.6.0.1015</span>
                    </div>
                    <div class="mod-description">
                        <p>The essential mod for any Minecraft player. JEI shows you all items and their recipes, making it easy to plan your mining and crafting projects.</p>
                    </div>
                    <div class="mod-features">
                        <h4>Key Features:</h4>
                        <ul>
                            <li>Complete item and recipe browser</li>
                            <li>Search and filter functionality</li>
                            <li>Bookmark favorite items</li>
                            <li>Integration with other mods</li>
                        </ul>
                    </div>
                    <div class="mod-download">
                        <a href="#" class="download-btn">
                            <i class="fas fa-download"></i>
                            Download
                        </a>
                        <span class="mod-compatibility">MC 1.20.1</span>
                    </div>
                </div>

                <div class="mod-card">
                    <div class="mod-header">
                        <h3>Ore Excavation</h3>
                        <span class="mod-version">v1.8.160</span>
                    </div>
                    <div class="mod-description">
                        <p>Mine entire ore veins with a single click! This mod allows you to excavate connected blocks of the same type, making mining much more efficient.</p>
                    </div>
                    <div class="mod-features">
                        <h4>Key Features:</h4>
                        <ul>
                            <li>Vein mining with keybind</li>
                            <li>Configurable tool durability</li>
                            <li>Smart block detection</li>
                            <li>XP and enchantment support</li>
                        </ul>
                    </div>
                    <div class="mod-download">
                        <a href="#" class="download-btn">
                            <i class="fas fa-download"></i>
                            Download
                        </a>
                        <span class="mod-compatibility">MC 1.20.1</span>
                    </div>
                </div>

                <div class="mod-card">
                    <div class="mod-header">
                        <h3>Xaero's Minimap</h3>
                        <span class="mod-version">v23.8.0</span>
                    </div>
                    <div class="mod-description">
                        <p>Enhanced minimap with waypoints, cave mapping, and resource tracking. Essential for navigation and marking mining locations.</p>
                    </div>
                    <div class="mod-features">
                        <h4>Key Features:</h4>
                        <ul>
                            <li>Custom waypoints and markers</li>
                            <li>Cave mapping and exploration</li>
                            <li>Resource location tracking</li>
                            <li>Death waypoints</li>
                        </ul>
                    </div>
                    <div class="mod-download">
                        <a href="#" class="download-btn">
                            <i class="fas fa-download"></i>
                            Download
                        </a>
                        <span class="mod-compatibility">MC 1.20.1</span>
                    </div>
                </div>

                <div class="mod-card">
                    <div class="mod-header">
                        <h3>Waystones</h3>
                        <span class="mod-version">v10.1.0</span>
                    </div>
                    <div class="mod-description">
                        <p>Fast travel system using waystones. Perfect for quickly returning to your mining bases and exploring new areas.</p>
                    </div>
                    <div class="mod-features">
                        <h4>Key Features:</h4>
                        <ul>
                            <li>Teleportation between waystones</li>
                            <li>XP cost for balance</li>
                            <li>Portable waystones</li>
                            <li>Village integration</li>
                        </ul>
                    </div>
                    <div class="mod-download">
                        <a href="#" class="download-btn">
                            <i class="fas fa-download"></i>
                            Download
                        </a>
                        <span class="mod-compatibility">MC 1.20.1</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Automation Mods Content -->
    <section class="mod-content hidden" id="automation-content">
        <div class="container">
            <div class="mods-grid">
                <div class="mod-card featured">
                    <div class="mod-header">
                        <h3>Create</h3>
                        <span class="mod-version">v0.5.1</span>
                    </div>
                    <div class="mod-description">
                        <p>Revolutionary mod that adds mechanical contraptions and automation. Build complex mining machines and automated sorting systems.</p>
                    </div>
                    <div class="mod-features">
                        <h4>Key Features:</h4>
                        <ul>
                            <li>Mechanical mining drills</li>
                            <li>Automated item sorting</li>
                            <li>Kinetic energy system</li>
                            <li>Complex contraptions</li>
                        </ul>
                    </div>
                    <div class="mod-download">
                        <a href="#" class="download-btn">
                            <i class="fas fa-download"></i>
                            Download
                        </a>
                        <span class="mod-compatibility">MC 1.20.1</span>
                    </div>
                </div>

                <div class="mod-card">
                    <div class="mod-header">
                        <h3>Applied Energistics 2</h3>
                        <span class="mod-version">v15.0.6</span>
                    </div>
                    <div class="mod-description">
                        <p>Digital storage and automation system. Store millions of items in a compact digital network with automatic sorting and processing.</p>
                    </div>
                    <div class="mod-features">
                        <h4>Key Features:</h4>
                        <ul>
                            <li>Digital item storage</li>
                            <li>Automatic crafting</li>
                            <li>Network-wide access</li>
                            <li>Energy management</li>
                        </ul>
                    </div>
                    <div class="mod-download">
                        <a href="#" class="download-btn">
                            <i class="fas fa-download"></i>
                            Download
                        </a>
                        <span class="mod-compatibility">MC 1.20.1</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Enhanced Tools Content -->
    <section class="mod-content hidden" id="tools-content">
        <div class="container">
            <div class="mods-grid">
                <div class="mod-card featured">
                    <div class="mod-header">
                        <h3>Tinkers' Construct</h3>
                        <span class="mod-version">v3.7.3</span>
                    </div>
                    <div class="mod-description">
                        <p>Completely reimagines tool crafting with modular parts, materials, and abilities. Create custom tools perfect for any mining situation.</p>
                    </div>
                    <div class="mod-features">
                        <h4>Key Features:</h4>
                        <ul>
                            <li>Modular tool crafting</li>
                            <li>Material properties system</li>
                            <li>Tool customization</li>
                            <li>Smeltery for alloys</li>
                        </ul>
                    </div>
                    <div class="mod-download">
                        <a href="#" class="download-btn">
                            <i class="fas fa-download"></i>
                            Download
                        </a>
                        <span class="mod-compatibility">MC 1.20.1</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- World Generation Content -->
    <section class="mod-content hidden" id="worldgen-content">
        <div class="container">
            <div class="mods-grid">
                <div class="mod-card featured">
                    <div class="mod-header">
                        <h3>Biomes O' Plenty</h3>
                        <span class="mod-version">v18.0.0.547</span>
                    </div>
                    <div class="mod-description">
                        <p>Adds dozens of new biomes with unique terrain, structures, and resources. Great for exploration and finding new mining opportunities.</p>
                    </div>
                    <div class="mod-features">
                        <h4>Key Features:</h4>
                        <ul>
                            <li>80+ new biomes</li>
                            <li>Unique structures</li>
                            <li>New ores and materials</li>
                            <li>Enhanced world generation</li>
                        </ul>
                    </div>
                    <div class="mod-download">
                        <a href="#" class="download-btn">
                            <i class="fas fa-download"></i>
                            Download
                        </a>
                        <span class="mod-compatibility">MC 1.20.1</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Installation Guide -->
    <section class="installation-guide">
        <div class="container">
            <h2>How to Install Mods</h2>
            <div class="install-steps">
                <div class="install-step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h3>Install Forge or Fabric</h3>
                        <p>Download and install the appropriate mod loader for your Minecraft version. Forge is more common, but Fabric is lighter.</p>
                    </div>
                </div>
                <div class="install-step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h3>Download Mods</h3>
                        <p>Download the mod files (.jar) from trusted sources like CurseForge or Modrinth. Always check compatibility.</p>
                    </div>
                </div>
                <div class="install-step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h3>Place in Mods Folder</h3>
                        <p>Copy the mod files to your Minecraft mods folder. The location varies by operating system.</p>
                    </div>
                </div>
                <div class="install-step">
                    <div class="step-number">4</div>
                    <div class="step-content">
                        <h3>Launch and Enjoy</h3>
                        <p>Start Minecraft with the mod loader profile and enjoy your enhanced mining experience!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    `
}) %>
